<h1>Product Types Index page</h1>
<table>
  <thead>
    <tr>
      <th><strong>Type ID</strong></th>
      <th><strong>Name</strong></th>
      <th><strong>Actions</strong></th>
    </tr>
  </thead>

  <tbody>
    <%= @types.each do |type| %>
      <tr>
        <td><%= type.id %></td>
        <td><%= type.name %></td>
        <td><%= link_to 'Show', type_path(type) %></td>
        <td><%= link_to 'Edit', edit_type_path(type) %></td>
        <td><%= link_to 'Destroy', type_path(type),
              method: :delete,
              data: { confirm: 'All the associated PRODUCTS to this type also gets deleted.
                Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Create New Type', new_type_path %></br>
<%= link_to 'Create New Product', new_product_path %>
